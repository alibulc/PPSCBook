<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_margin="10dp"
        android:id="@+id/ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1-"
        android:textSize="20dp"
        android:textColor="#000000"
        android:textStyle="bold"
        />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="20dp"
        android:textColor="#000000"
        android:textStyle="bold"
        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/Statment"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Katas Raj Templates are revered Hindu templates in Pakistan in which district the templates reside?"
            android:textSize="20dp"
            android:textColor="#000000"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_weight="100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(A)"
                android:textSize="20dp"
                android:textColor="#000000"
               />
            <TextView
                android:id="@+id/optiona"
                android:layout_weight="50"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jhelum"
                android:textSize="20dp"
                android:textColor="#FF594F4F"
                android:textStyle="bold"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(B)"
                android:textSize="20dp"
                android:textColor="#FF252020"
                />
            <TextView
                android:id="@+id/optionb"
                android:layout_weight="50"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chakwal"
                android:textSize="20dp"
                android:textColor="#FF594F4F"
                android:textStyle="bold"/>

        </LinearLayout>
        <LinearLayout
            android:padding="1dp"
            android:layout_weight="100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(C)"
                android:textSize="20dp"
                android:textColor="#000000"
                >

            </TextView>
            <TextView
                android:id="@+id/optionc"
                android:layout_weight="50"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mianwali"
                android:textSize="20dp"
                android:textColor="#FF594F4F"
                android:textStyle="bold"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(D)"
                android:textSize="20dp"
                android:textColor="#000000"
                >

            </TextView>
            <TextView
                android:id="@+id/optiond"
                android:layout_weight="50"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dera Ghazi Khan"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#FF594F4F"
               />
        </LinearLayout>

          <LinearLayout
              android:orientation="horizontal"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:text="Answer"
                  android:textSize="18dp" />
              <ImageButton
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/btn"
                  android:src="@drawable/answer_view"/>
          </LinearLayout>



        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Answer"
            android:textSize="18dp"
            android:visibility="gone"
            android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>